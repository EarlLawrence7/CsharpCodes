using System;

public class Music
{
    public int duration { get; set; }
    public string genre { get; set; }

    // First constructor
    public Music(int duration, string genre)
    {
        this.duration = duration;
        this.genre = genre;
    }

    // Second constructor
    public Music(int duration, string genre, char durationType)
    {
        if (durationType == 'm')
        {
            this.duration = duration;
        }
        else if (durationType == 'h')
        {
            this.duration = duration * 60; // Convert hours to minutes
        }
        else if (durationType == 'd')
        {
            this.duration = duration * 1440; // Convert days to minutes
        }
        else
        {
            Console.WriteLine("Invalid duration type.");
        }

        this.genre = genre;
    }
}

class MainClass
{
    public static void Main(string[] args)
    {
        Console.Write("Enter constructor type: ");
        int constructorType = Convert.ToInt32(Console.ReadLine());

        if (constructorType == 1)
        {
            Console.Write("Enter music duration: ");
            int duration = Convert.ToInt32(Console.ReadLine());
            Console.Write("Enter music genre: ");
            string genre = Console.ReadLine();

            Music music = new Music(duration, genre);

            Tester.Test(music, duration, 'm', constructorType);
        }
        else if (constructorType == 2)
        {
            Console.Write("Enter music duration: ");
            int duration = Convert.ToInt32(Console.ReadLine());
            Console.Write("Enter duration type (m - minutes, h - hours, d - days): ");
            char durationType = Convert.ToChar(Console.ReadLine());
            Console.Write("Enter music genre: ");
            string genre = Console.ReadLine();

            Music music = new Music(duration, genre, durationType);

            Tester.Test(music, duration, durationType, constructorType);
        }
        else
        {
            Console.WriteLine("Invalid constructor type.");
        }
    }
}
